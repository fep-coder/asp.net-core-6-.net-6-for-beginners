@model List<IdentityUser>
<h1>Admin Area</h1>

<table class="table table-bordered">
        <tr class="bg-primary text-center text-white">
                <th>Id</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Edit</th>
                <th>Delete</th>
        </tr>

        @if (Model.Count == 0)
        {
                <tr>
                        <td colspan="5" class="text-center">No User Accounts</td>
                </tr>
        }
        else
        {
                foreach (var user in Model)
                {
                        <tr>
                                <td>@user.Id</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>
                                        <a class="btn btn-sm btn-warning" asp-area="Admin" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                </td>
                                <td>
                                        <a class="btn btn-sm btn-warning" asp-area="Admin" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                                </td>
                        </tr>
                }
        }
</table>