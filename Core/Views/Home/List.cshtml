@model IEnumerable<Product>

@{
        decimal average = Model.Average(p => p.Price);
        ViewBag.Title = "List";
}

<div class="col-12 m-2">
        <h2 class="text-white bg-info p-2">All Product</h2>

        <table class="table table-striped table-bordered">
                <thead>
                        <tr>
                                <th>Name</th>
                                <th>Price</th>
                        </tr>
                </thead>
                <tbody>
                        @foreach (Product p in Model)
                        {
                                <tr>
                                        <td>@p.Name</td>
                                        <td>@p.Price</td>
                                        <td>
                                                @((p.Price / average * 100).ToString("F1")) % of average
                                        </td>
                                        <td>
                                                @((p.Price / ViewBag.AveragePrice * 100).ToString("F1")) % of average
                                        </td>
                                </tr>
                        }
                </tbody>
        </table>
</div>
